

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="fr">
	<head profile="http://gmpg.org/xfn/11">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title><%= h(page_title) %></title>
		<%= stylesheet_link_tag "/stylesheets/theme/bootstrap.min.css", "/stylesheets/theme/style.css", :media => 'all' %>  
		<%= page_header %>
		<script type="text/javascript">
				function traco() {
						$('traco').setStyle({
										width: parseInt($('main').getStyle('width')) - 220 + "px"
										});
				};
		</script>
	</head>
	<body onload="traco()">
		<div id="external">
			<div id='main'>
				<header>
				<div class="pacote">
					<div class="linha">
								<div class="celula">
										<h1><%= link_to(this_blog.blog_name, this_blog.base_url) %></h1>
								</div>
								<div class="celula">
										<ul class='nav'>
												<li><%= link_to(_('Sobre'), '/')%></li>
												<li><%= link_to(_('Articles'), {:controller => 'categories'})%></li>
												<li><%= link_to(_('Statuses'), {:controller => 'notes'}) %></li>
										</ul>
								</div>
								<div id="Botoes" class="celula">
								  <%= image_tag "facebook.png" %>
									<%= image_tag "rss.png" %>
								</div>
						</div>
				</div>
						<hr id="traco">
				</header>

				<div id='page' class='container'>
							<%= yield %>
						<!--<div id='sidebar' class='span3'>
              <%= render_sidebars %>
					</div>-->
				</div>
				<p style='text-align: center'><small>Powered by <a href='http://publify.co'>Publify</a> – Thème <a href='http://t37.net'>Frédéric de Villamil</a> | Photo <a href='http://www.flickr.com/photos/glenn-/7194522034/'>Glenn</a></small></p>
			</div>
		</div>
	</body>
</html>
